	<h1>Products Dashboard (index)</h1>
	<h3>Listing Products</h3>	
	<form action="<%= new_product_path %>">
		<button class ='btn btn-info '>	
			ADD NEW Product
		</button>
	</form>
<% if flash.now[:success] %>
	<p class="success"><%= flash.now[:success] %></p>
	<% elsif flash[:delete_success] %>
	<p class="success"><%= flash[:delete_success] %></p>
	<% else %>
	<p class="error"><%= flash.now[:error] %></p>

	<% end %>	
	<table class="table table-striped table-bordered table-hover">
		<thead>
			<tr>
				<th>Product Name</th>
				<th>Description</th>
				<th>Price</th>
				<th>Category</th>
				<th>SHOW/EDIT/DELETE</th>
			</tr>
		</thead>
		<tbody>
			<% @products.each do |i| %>
			<tr>
				<td><%= i.name %></td>
				<td><%= i.description %></td>
				<td><%= number_to_currency(i.pricing) %></td>
				<td><%= i.category.name %>
				</td>
				<td>
					<form action="<%= product_path(i[:id]) %>">
						<input type="submit" value="SHOW" class="btn btn-primary">
					</form>
					<form action="<%= edit_product_path(i[:id]) %>">
						<input type="submit" value="EDIT" class="btn btn-info">
					</form>
					<button class="btn btn-danger">
					<a data-method="delete" href="<%= product_path(i[:id]) %>">DELETE</a>
				</button>

				</td>
			</tr>
			<% end %>
		</tbody>
	</table>

